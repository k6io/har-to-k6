    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current HAR",
            "program": "${workspaceFolder}/bin/har-to-k6.js",
            "request": "launch",
            "args": ["${file}"],
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug AVA test file",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
            "runtimeArgs": ["${file}"],
            "outputCapture": "std",
            "env": {
                "NODE_PATH": "src:test"
            },
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceFolder}/node_modules/**/*.js"
            ]
        }
    ]
}
